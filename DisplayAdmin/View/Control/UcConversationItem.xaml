<UserControl x:Class="DisplayAdmin.View.Control.UcConversationItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DisplayAdmin.View.Control"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="tbDate" Text="2019.07.05" VerticalAlignment="Center"/>
            <StackPanel Height="100" Orientation="Vertical" VerticalAlignment="Center" Width="650" Margin="10,0,10,0">
                <TextBlock x:Name="tbEnglish" Height="50" Text="Just because something doesn't do what you planned it to do doesn't mean it's useless."/>
                <TextBlock x:Name="tbKorean" Height="50" Text="어떤 것이 당신의 계획대로 되지 않는 다고 해서 그것이 불필요한 것은 아니다."/>
            </StackPanel>
            <Button x:Name="btnRemove" Content="X" Height="80" Width="80" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</UserControl>
